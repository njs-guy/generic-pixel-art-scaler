<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="100"
             x:Class="GenericPixelArtScaler.Views.OpenButtons">
  <StackPanel Orientation="Vertical" Spacing="10">
    <TextBlock HorizontalAlignment="Center" >Open some pixel art to resize it...</TextBlock>
    <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
      <Button>Open file</Button>
      <Button>Open folder</Button>
      <Button>Copy from clipboard</Button>
    </StackPanel>
  </StackPanel>
</UserControl>
